
<MudDialog Class="reset-dialog">
    <DialogContent>
        <MudContainer Style="max-height: 350px; overflow-y: scroll; padding: 0 10px 0 16px">
            This action cannot be reverted.
            <br />
            @Content
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">Reset</MudButton>
    </DialogActions>
</MudDialog>
