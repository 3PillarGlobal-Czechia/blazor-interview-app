
<MudDialog Class="note-dialog">
    <DialogContent>
        <MudContainer Style="max-height: 350px; overflow-y: scroll; padding: 0 10px 0 16px">
            <MudText Typo="Typo.body1" Class="mb-3">@Question</MudText>
            <MudTextFieldString @bind-Value="Note" Immediate="true" Lines="10" Label="Notes" Class="note" Variant="Variant.Outlined" />
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Save</MudButton>
    </DialogActions>
</MudDialog>
