@inherits LayoutComponentBase

<MudThemeProvider Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent Class="pt-8">
        <MudContainer MaxWidth="MaxWidth.Medium">
            <MudContainer Fixed="true">
                @Body
            </MudContainer>
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudContainer Class="d-flex justify-end" Style="position: fixed; top: 10px; right: 0">
    <MudTooltip Class="absolute-tooltip" Text="Settings" Placement="Placement.Left">
        <MudIconButton Icon="@Icons.Material.Filled.Settings" />
    </MudTooltip>
    <MudTooltip Class="absolute-tooltip" Text="Switch theme" Placement="Placement.Left">
        <MudIconButton OnClick="() => SwitchTheme()" Icon="@Icons.Material.Filled.Brightness6" />
    </MudTooltip>
</MudContainer>